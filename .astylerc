
# Bracket style
style=kr

# indentation
indent=spaces=4
indent-classes
indent-switches
indent-cases
indent-namespaces
indent-col1-comments
max-instatement-indent=60

# padding around operators
pad-oper
pad-header
# the other extra padding are removed
unpad-paren

delete-empty-lines

# align pointers
align-pointer=middle
